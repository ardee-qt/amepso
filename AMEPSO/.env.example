# AMEPSO E-Wallet Configuration File
# Copy this file to .env and update with your credentials

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=amepso_wallet

# Server Configuration
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Security
APP_KEY=your_secret_app_key_here
JWT_SECRET=your_jwt_secret_key_here

# Session Configuration
SESSION_LIFETIME=1440
REMEMBER_ME=true

# API Configuration
API_VERSION=1.0
API_RATE_LIMIT=100

# Email Configuration (for future notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_email
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@amepso.com

# Timezone
TIMEZONE=Asia/Manila

# Currency
CURRENCY=PHP
CURRENCY_SYMBOL=â‚±

# Application Settings
APP_NAME=AMEPSO E-Wallet
APP_VERSION=1.0.0
COMPANY_NAME=ORMECO
COMPANY_EMAIL=support@ormeco.com

# Payment Methods
PAYMENT_METHODS=credit_card,debit_card,bank_transfer,gcash,paymaya

# Feature Flags
ENABLE_RECURRING_PAYMENTS=true
ENABLE_BUDGET_TRACKING=true
ENABLE_SPENDING_ANALYTICS=true
ENABLE_PAYMENT_REMINDERS=true

# Notification Settings
SEND_EMAIL_NOTIFICATIONS=false
SEND_SMS_NOTIFICATIONS=false
SEND_PUSH_NOTIFICATIONS=false

# Log Configuration
LOG_CHANNEL=single
LOG_LEVEL=debug

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=amepso_

# Queue Configuration (for future async jobs)
QUEUE_DRIVER=sync

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_UPLOAD_TYPES=pdf,jpg,png,doc,docx
